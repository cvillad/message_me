<div class="ui inverted stackable small menu">
  <div class="ui container">
    <%= link_to "Chatroom", root_path, class: "item" %>
    <a class="item">
      Messages
    </a>
    <div class="right menu">
      <% if !logged_in? %>
        <div class="item">
            <%=link_to "Login", login_path, class:"ui primary button" %>
        </div>
        <div class="item">
            <div class="ui primary button">Sign Up</div>
        </div>
      <% end %>
      <% if logged_in? %>
        <div class="ui dropdown item">
          Account <i class="dropdown icon"></i>
          <div class="menu">
            <a class="item">Profile</a>
            <a class="item">Edit profile</a>
            <%= link_to "Log out", logout_path, class: "item", method: :delete %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>